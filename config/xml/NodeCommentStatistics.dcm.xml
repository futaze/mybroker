<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="NodeCommentStatistics" table="node_comment_statistics">
    <id name="nid" type="integer" column="nid">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="cid" type="integer" column="cid" nullable="false"/>
    <field name="lastCommentTimestamp" type="integer" column="last_comment_timestamp" nullable="false"/>
    <field name="lastCommentName" type="string" column="last_comment_name" length="60" nullable="true"/>
    <field name="lastCommentUid" type="integer" column="last_comment_uid" nullable="false"/>
    <field name="commentCount" type="integer" column="comment_count" nullable="false"/>
  </entity>
</doctrine-mapping>
